{
  "openapi" : "3.0.0",
  "info" : {
    "description" : "SIS-语音识别接口",
    "title" : "SIS",
    "version" : "2025-06-13",
    "x-host_prefix": "sis-ext"
  },
  "servers" : [ {
    "url" : "/"
  } ],
  "components" : {
    "parameters" : { },
    "schemas" : {
      "WordInfo" : {
        "properties" : {
          "start_time" : {
            "type" : "integer",
            "format" : "int32",
            "example" : 150,
            "description" : "起始时间"
          },
          "end_time" : {
            "type" : "integer",
            "format" : "int32",
            "example" : 540,
            "description" : "结束时间"
          },
          "word" : {
            "type" : "string",
            "example" : "华为",
            "description" : "分词"
          }
        },
        "description" : "",
        "type" : "object"
      },
      "Config" : {
        "required" : [ "audio_format", "property" ],
        "properties" : {
          "audio_format" : {
            "type" : "string",
            "description" : "支持语音的格式。",
            "enum" : [ "pcm16k16bit", "pcm8k16bit", "ulaw16k8bit", "ulaw8k8bit", "alaw16k8bit", "alaw8k8bit", "mp3", "aac", "wav", "amr", "amrwb", "auto" ],
            "default" : "pcm16k16bit"
          },
          "property" : {
            "type" : "string",
            "description" : "所使用的模型特征串。通常是 “语种_采样率_领域”的形式。",
            "enum" : [ "chinese_16k_general", "chinese_16k_travel", "chinese_8k_common", "chinese_16k_common", "sichuan_16k_common", "cantonese_16k_common", "shanghai_16k_common", "english_8k_common", "english_16k_common" ],
            "default" : "chinese_16k_common"
          },
          "add_punc" : {
            "type" : "string",
            "description" : "表示是否在识别结果中添加标点,取值为“yes”和“no”,缺省为“no”。",
            "enum" : [ "yes", "no" ],
            "default" : "no"
          },
          "vocabulary_id" : {
            "type" : "string",
            "description" : "热词表id,不使用则不填写。"
          },
          "digit_norm" : {
            "type" : "string",
            "description" : "表示是否将语音中的数字识别为阿拉伯数字,取值为“yes” 和 “no”,缺省为“yes”。",
            "enum" : [ "yes", "no" ],
            "default" : "yes"
          },
          "need_word_info" : {
            "type" : "string",
            "description" : "表示是否在识别结果中输出分词结果信息,取值为“yes”和“no”,默认为“no”。",
            "enum" : [ "yes", "no" ],
            "default" : "no"
          }
        },
        "type" : "object"
      },
      "PostShortAudioReq" : {
        "required" : [ "config", "data" ],
        "properties" : {
          "config" : {
            "description" : "配置信息。",
            "$ref" : "#/components/schemas/Config"
          },
          "data" : {
            "type" : "string",
            "description" : "语音数据,base64编码,要求base64编码后大小不超过4M,音频时长不超过1分钟。"
          }
        },
        "type" : "object"
      },
      "PostShortAudioResp" : {
        "required" : [ "result", "trace_id" ],
        "properties" : {
          "trace_id" : {
            "type" : "string",
            "description" : "服务内部的令牌,可用于在日志中追溯具体流程,调用失败无此字段。"
          },
          "result" : {
            "description" : "调用成功表示识别结果,调用失败时无此字段。",
            "$ref" : "#/components/schemas/Result"
          }
        },
        "type" : "object"
      },
      "ErrorResp" : {
        "properties" : {
          "error_code" : {
            "type" : "string",
            "description" : "调用失败时的错误码。"
          },
          "error_msg" : {
            "type" : "string",
            "description" : "调用失败时的错误信息。"
          }
        },
        "type" : "object"
      },
      "Result" : {
        "required" : [ "score", "text" ],
        "properties" : {
          "text" : {
            "type" : "string",
            "description" : "调用成功表示识别出的内容。"
          },
          "score" : {
            "type" : "number",
            "format" : "float",
            "description" : "调用成功表示识别出的置信度,取值范围:0~1。"
          },
          "word_info" : {
            "type" : "array",
            "description" : "分词信息列表",
            "items" : {
              "description" : "",
              "$ref" : "#/components/schemas/WordInfo"
            }
          }
        },
        "type" : "object"
      },
      "DeleteVocabulayResponse" : {
        "properties" : {
          "vocabulary_id" : {
            "type" : "string",
            "description" : "删除的热词表的名称。"
          },
          "message" : {
            "type" : "string",
            "description" : "删除成功的消息。"
          }
        },
        "type" : "object"
      },
      "PutUpdateVocabResp" : {
        "required" : [ "vocabulary_id" ],
        "properties" : {
          "vocabulary_id" : {
            "type" : "string",
            "description" : "调用成功返回热词表ID,调用失败时无此字段。"
          }
        },
        "description" : "",
        "type" : "object"
      },
      "PutUpdateVocabReq" : {
        "required" : [ "contents", "language", "name" ],
        "properties" : {
          "name" : {
            "type" : "string",
            "description" : "热词表名,不可重复。内容限制为字母,数字,下中划线和井号,长度不超过32字节。",
            "minLength" : 1,
            "maxLength" : 32
          },
          "description" : {
            "type" : "string",
            "description" : "热词表描述,长度不超过255字节。",
            "minLength" : 0,
            "maxLength" : 255
          },
          "language" : {
            "type" : "string",
            "description" : "热词表语言类型。",
            "enum" : [ "chinese_mandarin" ],
            "default" : "chinese_mandarin"
          },
          "contents" : {
            "type" : "array",
            "description" : "支持中英混编热词,单个热词只能由英文字母和unicode编码的汉字组成,不能有其他符号,包括空格。",
            "items" : {
              "type" : "string",
              "description" : "",
              "minLength" : 1,
              "maxLength" : 32
            },
            "maxItems" : 1024,
            "minItems" : 1
          }
        },
        "description" : "",
        "type" : "object"
      },
      "AnalysisInfoResult" : {
        "properties" : {
          "role" : {
            "type" : "string",
            "description" : "角色类型, 目前仅支持 AGENT(座席), USER(用户)。"
          },
          "emotion" : {
            "type" : "string",
            "description" : "情绪类型,目前支持NORMAL(正常),ANGRY(愤怒),UNKNOWN(未知)。"
          },
          "speed" : {
            "type" : "number",
            "format" : "float",
            "description" : "语速信息,单位是\"每秒字数\"。"
          }
        },
        "type" : "object"
      },
      "GetTranscriberJobResp" : {
        "properties" : {
          "job_id" : {
            "type" : "string",
            "description" : "录音文件识别任务标识符。"
          },
          "status" : {
            "type" : "string",
            "description" : "当前识别状态。具体状态如下所示:"
          },
          "create_time" : {
            "type" : "string",
            "description" : "任务创建时间, 遵循 RFC 3339格式。"
          },
          "start_time" : {
            "type" : "string",
            "description" : "开始识别时间, 遵循 RFC 3339格式。"
          },
          "finish_time" : {
            "type" : "string",
            "description" : "识别完成时间, 遵循 RFC 3339格式。"
          },
          "segments" : {
            "type" : "array",
            "description" : "转写结果, 多句结果的数组。",
            "items" : {
              "$ref" : "#/components/schemas/Segment"
            }
          },
          "audio_duration" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "音频时长,单位ms"
          }
        },
        "type" : "object"
      },
      "TranscriberResult" : {
        "required" : [ "text" ],
        "properties" : {
          "text" : {
            "type" : "string",
            "description" : "识别结果文本。"
          },
          "analysis_info" : {
            "description" : "每一句的质检分析结果对象 。",
            "$ref" : "#/components/schemas/AnalysisInfoResult"
          },
          "word_info" : {
            "type" : "array",
            "description" : "分词输出列表",
            "items" : {
              "description" : "分词信息",
              "$ref" : "#/components/schemas/WordInfo"
            }
          }
        },
        "type" : "object"
      },
      "Segment" : {
        "required" : [ "end_time", "result", "start_time" ],
        "properties" : {
          "start_time" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "一句的起始时间戳,单位ms。"
          },
          "end_time" : {
            "type" : "integer",
            "format" : "int32",
            "description" : "一句的结束时间戳,单位ms。"
          },
          "result" : {
            "description" : "调用成功表示识别结果,调用失败时无此字段。",
            "$ref" : "#/components/schemas/TranscriberResult"
          }
        },
        "type" : "object"
      },
      "TranscriberConfig" : {
        "required" : [ "property" ],
        "properties" : {
          "audio_format" : {
            "type" : "string",
            "description" : "支持语音的格式。",
            "enum" : [ "auto", "pcm16k16bit", "pcm8k16bit", "ulaw16k8bit", "ulaw8k8bit", "alaw16k8bit", "alaw8k8bit", "vox8k4bit", "v3_8k4bit" ],
            "default" : "pcm8k16bit"
          },
          "property" : {
            "type" : "string",
            "description" : "所使用的模型特征串。通常是“语种_采样率_领域”的形式,例如chinese_8k_common。",
            "enum" : [ "chinese_16k_media", "chinese_8k_common", "chinese_16k_conversation", "chinese_8k_bank", "chinese_8k_insurance", "sichuan_8k_common", "chinese_8k_general" ],
            "default" : "chinese_8k_common"
          },
          "add_punc" : {
            "type" : "string",
            "description" : "是否加标点, 可以为 yes, no(缺省)。",
            "enum" : [ "yes", "no" ],
            "default" : "no"
          },
          "need_analysis_info" : {
            "description" : "该参数用于设置质检分析参数,是否需要输出质检分析内容,如果为null(缺省) , 表示不需要。仅对8K模型有效。",
            "$ref" : "#/components/schemas/AnalysisInfo"
          },
          "vocabulary_id" : {
            "type" : "string",
            "description" : "热词表id,不使用则不填写。"
          },
          "digit_norm" : {
            "type" : "string",
            "description" : "表示是否将语音中的数字识别为阿拉伯数字,取值为yes 、 no,缺省为yes。",
            "enum" : [ "yes", "no" ],
            "default" : "yes"
          },
          "callback_url" : {
            "type" : "string",
            "description" : "用于录音文件识表示回调 url,即用户用于接收识别结果的服务器地址,不支持IP地址方式调用,url长度小于2048字节。服务请求方法为POST。"
          },
          "need_word_info" : {
            "type" : "string",
            "description" : "表示是否在识别结果中输出分词结果信息,取值为“yes”和“no”,默认为“no”。",
            "enum" : [ "yes", "no" ],
            "default" : "no"
          }
        },
        "type" : "object"
      },
      "AnalysisInfo" : {
        "properties" : {
          "diarization" : {
            "type" : "boolean",
            "description" : "是否需要做话者分离。缺省为true,表示会进行话者分离,识别结果中会包含role项(角色)。如果diarization为false, 那么结果中不会出现role项。"
          },
          "channel" : {
            "type" : "string",
            "description" : "语音文件声道信息,可以为MONO(缺省), LEFT_AGENT, RIGHT_AGENT。",
            "enum" : [ "MONO", "LEFT_AGENT", "RIGHT_AGENT" ],
            "default" : "MONO"
          },
          "emotion" : {
            "type" : "boolean",
            "description" : "是否需要做情绪检测, 缺省为true。"
          },
          "speed" : {
            "type" : "boolean",
            "description" : "是否需要输出语速信息, 缺省为true。"
          }
        },
        "type" : "object"
      },
      "PostTranscriberJobs" : {
        "required" : [ "config", "data_url" ],
        "properties" : {
          "config" : {
            "description" : "录音文件识别配置信息。",
            "$ref" : "#/components/schemas/TranscriberConfig"
          },
          "data_url" : {
            "type" : "string",
            "description" : "存放在OBS的音频文件路径。OBS的region要和请求服务的region保持一致,region不一致则OBS不可用,即使obs是公开访问权限。"
          }
        },
        "description" : "",
        "type" : "object"
      },
      "PostTranscriberJobsResp" : {
        "required" : [ "job_id" ],
        "properties" : {
          "job_id" : {
            "type" : "string",
            "description" : "创建的任务标识, 如果创建任务成功时必须存在。"
          }
        },
        "type" : "object"
      },
      "Sentences" : {
        "properties" : {
          "end_time" : {
            "type" : "integer",
            "format" : "int32",
            "example" : 1320,
            "description" : "分句结果信息"
          },
          "result" : {
            "description" : "分句结果信息",
            "$ref" : "#/components/schemas/FlashScoreResult"
          },
          "start_time" : {
            "type" : "integer",
            "format" : "int32",
            "example" : 560,
            "description" : "一句话开始时间,单位毫秒"
          }
        },
        "description" : "",
        "type" : "object"
      },
      "FlashScoreResult" : {
        "required" : [ "score", "text" ],
        "properties" : {
          "text" : {
            "type" : "string",
            "description" : "调用成功表示识别出的内容。"
          },
          "score" : {
            "type" : "number",
            "format" : "double",
            "description" : "调用成功表示识别出的置信度,取值范围:0~1。"
          },
          "word_info" : {
            "type" : "array",
            "description" : "分词信息列表",
            "items" : {
              "description" : "",
              "$ref" : "#/components/schemas/WordInfo"
