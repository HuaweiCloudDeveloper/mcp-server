        "type" : "object"
      },
      "FlashResult" : {
        "properties" : {
          "channel_id" : {
            "type" : "integer",
            "format" : "int32",
            "example" : 0,
            "description" : "音频声道id"
          },
          "sentences" : {
            "type" : "array",
            "example" : "[{\"start_time\":560,\"end_time\":1320,\"result\":{\"text\":\"北京你好\",\"score\":0.831,\"word_info\":[{\"word\":\"北京\",\"start_time\":560,\"end_time\":890},{\"word\":\"你好\",\"start_time\":920,\"end_time\":1310}]}}]",
            "description" : "分句结果",
            "items" : {
              "description" : "",
              "$ref" : "#/components/schemas/Sentences"
            }
          }
        },
        "description" : "",
        "type" : "object"
      },
      "PostFlashAsrResp" : {
